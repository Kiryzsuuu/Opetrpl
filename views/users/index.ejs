<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="bi bi-people"></i> Management User</h2>
  <a href="/users/new" class="btn btn-primary">
    <i class="bi bi-person-plus"></i> Tambah User
  </a>
</div>

<% if (users.length === 0) { %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> Belum ada data user.
  </div>
<% } else { %>
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>No</th>
              <th>Username</th>
              <th>Email</th>
              <th>Nama Lengkap</th>
              <th>Role</th>
              <th>Status</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <a href="/users/<%= item._id %>"><%= item.username %></a>
                </td>
                <td><%= item.email %></td>
                <td><%= item.nama || '-' %></td>
                <td>
                  <% if (item.role === 'Super Admin') { %>
                    <span class="badge bg-danger"><%= item.role %></span>
                  <% } else if (item.role === 'Admin') { %>
                    <span class="badge bg-primary"><%= item.role %></span>
                  <% } else if (item.role === 'Peneliti') { %>
                    <span class="badge bg-success"><%= item.role %></span>
                  <% } else { %>
                    <span class="badge bg-info"><%= item.role %></span>
                  <% } %>
                </td>
                <td>
                  <span class="badge <%= item.status === 'Aktif' ? 'bg-success' : 'bg-secondary' %>"><%= item.status || '-' %></span>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/users/<%= item._id %>" class="btn btn-info" title="Lihat Detail">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="/users/<%= item._id %>/edit" class="btn btn-warning" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </a>
                    
                    <% if (item._id.toString() !== user._id.toString()) { %>
                      <!-- Toggle Status -->
                      <form action="/users/<%= item._id %>/toggle-status?_method=POST" method="POST" class="d-inline">
                        <button type="submit" class="btn <%= item.status === 'Aktif' ? 'btn-secondary' : 'btn-success' %>" 
                                title="<%= item.status === 'Aktif' ? 'Nonaktifkan' : 'Aktifkan' %>"
                                onclick="return confirm(`<%= item.status === 'Aktif' ? 'Yakin menonaktifkan user ini?' : 'Yakin mengaktifkan user ini?' %>`)"
                        >
                          <i class="bi bi-<%= item.status === 'Aktif' ? 'toggle-off' : 'toggle-on' %>"></i>
                        </button>
                      </form>
                      
                      <!-- Delete -->
                      <form action="/users/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" title="Hapus"
                                onclick="return confirm(`Yakin ingin menghapus user ini? Data tidak dapat dikembalikan.`)">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% } %>
