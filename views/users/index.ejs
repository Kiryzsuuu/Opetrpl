<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Prevent Bootstrap dropdowns from being clipped inside responsive tables */
    .users-table-responsive {
      overflow-x: auto;
      overflow-y: visible;
    }
    .users-table-responsive .table {
      overflow: visible;
    }
    .users-table-responsive .table tbody tr:hover {
      transform: none;
    }
    .users-table-responsive .dropdown-menu {
      z-index: 2000;
      max-height: 320px;
      overflow-y: auto;
      overflow-x: hidden;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../partials/sidebar') %>
      </nav>
      
      <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><i class="bi bi-people"></i> <%= title %></h1>
          <a href="/users/new" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Tambah User
          </a>
        </div>

        <%- include('../partials/flash') %>

        <div class="card">
          <div class="card-body">
            <% if (!users || users.length === 0) { %>
              <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle"></i> Belum ada data user.
              </div>
            <% } else { %>
              <div class="table-responsive users-table-responsive">
                <table class="table table-striped table-hover align-middle">
                  <thead>
                    <tr>
                      <th style="width: 60px;">No</th>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Nama</th>
                      <th>Role</th>
                      <th>Status</th>
                      <th style="width: 180px;">Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach((item, index) => { %>
                      <% const isSelf = item._id.toString() === user._id.toString(); %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td>
                          <a href="/users/<%= item._id %>" class="text-decoration-none"><%= item.username %></a>
                          <% if (isSelf) { %>
                            <span class="badge bg-secondary ms-2">Anda</span>
                          <% } %>
                        </td>
                        <td><%= item.email %></td>
                        <td><%= item.nama || '-' %></td>
                        <td>
                          <% if (item.role === 'Super Admin') { %>
                            <span class="badge bg-danger"><%= item.role %></span>
                          <% } else if (item.role === 'Admin') { %>
                            <span class="badge bg-primary"><%= item.role %></span>
                          <% } else if (item.role === 'Peneliti') { %>
                            <span class="badge bg-success"><%= item.role %></span>
                          <% } else { %>
                            <span class="badge bg-info"><%= item.role %></span>
                          <% } %>
                        </td>
                        <td>
                          <span class="badge <%= (item.status || '') === 'Aktif' ? 'bg-success' : 'bg-secondary' %>"><%= item.status || '-' %></span>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group" aria-label="Aksi user">
                            <a href="/users/<%= item._id %>" class="btn btn-info" title="Lihat Detail">
                              <i class="bi bi-eye"></i>
                            </a>
                            <a href="/users/<%= item._id %>/edit" class="btn btn-warning" title="Edit">
                              <i class="bi bi-pencil"></i>
                            </a>

                            <div class="btn-group btn-group-sm" role="group">
                              <button type="button" class="btn btn-outline-secondary dropdown-toggle btn-actions-more" data-bs-toggle="dropdown" data-bs-boundary="viewport" aria-expanded="false" title="Aksi Lain">
                                <i class="bi bi-three-dots-vertical"></i>
                              </button>
                              <ul class="dropdown-menu dropdown-menu-end">
                                <% if (isSelf) { %>
                                  <li><span class="dropdown-item-text text-muted">Tidak ada aksi untuk akun sendiri</span></li>
                                <% } else { %>
                                  <li>
                                    <% if ((item.status || '') === 'Aktif') { %>
                                      <form action="/users/<%= item._id %>/set-status" method="POST" data-confirm="Yakin menonaktifkan (revoke) user ini?" data-confirm-ok-text="Revoke" data-confirm-btn-class="btn-secondary">
                                        <input type="hidden" name="status" value="Tidak Aktif">
                                        <button type="submit" class="dropdown-item">
                                          <i class="bi bi-person-x me-2"></i> Revoke (Nonaktifkan)
                                        </button>
                                      </form>
                                    <% } else { %>
                                      <form action="/users/<%= item._id %>/set-status" method="POST" data-confirm="Yakin memverifikasi (aktifkan) user ini?" data-confirm-ok-text="Verifikasi" data-confirm-btn-class="btn-success">
                                        <input type="hidden" name="status" value="Aktif">
                                        <button type="submit" class="dropdown-item">
                                          <i class="bi bi-person-check me-2"></i> Verifikasi (Aktifkan)
                                        </button>
                                      </form>
                                    <% } %>
                                  </li>

                                  <li><hr class="dropdown-divider"></li>
                                  <li><span class="dropdown-item-text text-muted">Ubah Role</span></li>

                                  <% const roles = ['Super Admin', 'Admin', 'Peneliti', 'Petugas Lapangan']; %>
                                  <% roles.forEach(r => { %>
                                    <li>
                                      <form action="/users/<%= item._id %>/set-role" method="POST" data-confirm="Yakin mengubah role user ini menjadi: <%= r %>?" data-confirm-ok-text="Ubah" data-confirm-btn-class="btn-primary">
                                        <input type="hidden" name="role" value="<%= r %>">
                                        <button type="submit" class="dropdown-item" <%= item.role === r ? 'disabled' : '' %>>
                                          <% if (item.role === r) { %>
                                            <i class="bi bi-check2 me-2"></i>
                                          <% } else { %>
                                            <span class="me-2" style="display:inline-block;width:1.1rem;"></span>
                                          <% } %>
                                          <%= r %>
                                        </button>
                                      </form>
                                    </li>
                                  <% }) %>

                                  <li><hr class="dropdown-divider"></li>
                                  <li>
                                    <form action="/users/<%= item._id %>?_method=DELETE" method="POST" data-confirm="Yakin ingin menghapus user ini? Data tidak dapat dikembalikan." data-confirm-ok-text="Hapus" data-confirm-btn-class="btn-danger">
                                      <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-trash me-2"></i> Hapus User
                                      </button>
                                    </form>
                                  </li>
                                <% } %>
                              </ul>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
