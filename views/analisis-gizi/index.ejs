<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../partials/sidebar') %>
      </nav>

      <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
        <div class="pt-3">
          <div class="d-flex justify-content-between align-items-center mb-4 page-animate">
            <h2><i class="bi bi-graph-up"></i> Analisis Gizi</h2>
            <div class="d-flex gap-2">
              <a href="/analisis-gizi/export/csv" class="btn btn-success">
                <i class="bi bi-download"></i> Download CSV
              </a>
              <a href="/analisis-gizi/new" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Tambah Analisis
              </a>
            </div>
          </div>

          <% if (items && items.length > 0) { %>
            <div class="card mb-4">
              <div class="card-header">
                <i class="bi bi-bar-chart"></i> Grafik Nutrisi (Kalori/Protein/Lemak/Karbohidrat)
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <canvas id="giziChart" height="110"></canvas>
                </div>
              </div>
            </div>
          <% } %>

          <div class="card">
            <div class="card-body">
              <% if (items.length === 0) { %>
                <div class="alert alert-info">
                  <i class="bi bi-info-circle"></i> Belum ada data analisis gizi.
                </div>
              <% } else { %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Formulasi</th>
                        <th>Tanggal Analisis</th>
                        <th>Energi (kkal)</th>
                        <th>Protein (g)</th>
                        <th>Status</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% items.forEach((item, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td>
                            <a href="/analisis-gizi/<%= item._id %>"><%= item.formulasi && item.formulasi.nama ? item.formulasi.nama : '-' %></a>
                          </td>
                          <td><%= new Date(item.tanggalAnalisis).toLocaleDateString('id-ID') %></td>
                          <td><%= item.analisis && item.analisis.kalori != null ? item.analisis.kalori : 0 %></td>
                          <td><%= item.analisis && item.analisis.protein != null ? item.analisis.protein : 0 %></td>
                          <td>
                            <span class="badge bg-<%= item.status === 'Selesai' ? 'success' : item.status === 'Perlu Review' ? 'warning' : 'secondary' %>"><%= item.status %></span>
                          </td>
                          <td>
                            <div class="btn-group btn-group-sm">
                              <a href="/analisis-gizi/<%= item._id %>" class="btn btn-info"><i class="bi bi-eye"></i></a>
                              <a href="/analisis-gizi/<%= item._id %>/edit" class="btn btn-warning"><i class="bi bi-pencil"></i></a>
                              <form action="/analisis-gizi/<%= item._id %>?_method=DELETE" method="POST" class="d-inline" data-confirm="Yakin ingin menghapus?" data-confirm-btn-class="btn-danger" data-confirm-ok-text="Hapus">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                              </form>
                            </div>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>

  <% if (items && items.length > 0) { %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script type="application/json" id="giziData"><%- JSON.stringify(items.map(function (it) {
      return {
        tanggal: it.tanggalAnalisis ? new Date(it.tanggalAnalisis).toISOString().slice(0, 10) : '',
        kodeFormulasi: (it.formulasi && it.formulasi.kode) ? it.formulasi.kode : '',
        kalori: (it.analisis && it.analisis.kalori != null) ? it.analisis.kalori : 0,
        protein: (it.analisis && it.analisis.protein != null) ? it.analisis.protein : 0,
        lemak: (it.analisis && it.analisis.lemak != null) ? it.analisis.lemak : 0,
        karbohidrat: (it.analisis && it.analisis.karbohidrat != null) ? it.analisis.karbohidrat : 0,
        serat: (it.analisis && it.analisis.serat != null) ? it.analisis.serat : 0,
        gula: (it.analisis && it.analisis.gula != null) ? it.analisis.gula : 0,
        natrium: (it.analisis && it.analisis.natrium != null) ? it.analisis.natrium : 0
      };
    })) %></script>
    <script>
      (function () {
        const el = document.getElementById('giziData');
        let raw = el ? JSON.parse(el.textContent || '[]') : [];
        raw.sort((a, b) => (a.tanggal > b.tanggal ? 1 : a.tanggal < b.tanggal ? -1 : 0));

        // keep chart readable
        if (raw.length > 12) raw = raw.slice(raw.length - 12);

        const labels = raw.map(r => (r.kodeFormulasi ? `${r.tanggal} â€¢ ${r.kodeFormulasi}` : r.tanggal));
        const ctx = document.getElementById('giziChart');
        if (!ctx) return;

        new Chart(ctx, {
          type: 'line',
          data: {
            labels,
            datasets: [
              { label: 'Kalori', data: raw.map(r => r.kalori), borderWidth: 2, tension: 0.25 },
              { label: 'Protein', data: raw.map(r => r.protein), borderWidth: 2, tension: 0.25 },
              { label: 'Lemak', data: raw.map(r => r.lemak), borderWidth: 2, tension: 0.25 },
              { label: 'Karbohidrat', data: raw.map(r => r.karbohidrat), borderWidth: 2, tension: 0.25 },
              { label: 'Serat', data: raw.map(r => r.serat), borderWidth: 2, tension: 0.25 },
              { label: 'Gula', data: raw.map(r => r.gula), borderWidth: 2, tension: 0.25 },
              { label: 'Natrium', data: raw.map(r => r.natrium), borderWidth: 2, tension: 0.25 }
            ]
          },
          options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } },
            scales: { y: { beginAtZero: true } }
          }
        });
      })();
    </script>
  <% } %>
</body>
</html>
