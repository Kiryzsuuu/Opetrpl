<%- include('../partials/page-start', { title }) %>

<div class="d-flex justify-content-between align-items-center mb-4 page-animate">
  <div>
    <h2 class="mb-1"><i class="bi bi-gear"></i> Detail Produksi</h2>
    <div class="text-secondary small">Kode: <strong><%= produksi.kodeProduksi %></strong> â€¢ Batch: <strong><%= produksi.batchNumber %></strong></div>
  </div>
  <div class="d-flex gap-2">
    <a href="/produksi/<%= produksi._id %>/edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
    <a href="/produksi" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Kembali</a>
  </div>
</div>

<%- include('../partials/flash') %>

<div class="row g-3">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Informasi</h5>
        <dl class="row mb-0">
          <dt class="col-sm-5">Formulasi</dt>
          <dd class="col-sm-7"><%= produksi.formulasi?.kode ? (produksi.formulasi.kode + ' - ' + produksi.formulasi.nama) : '-' %></dd>

          <dt class="col-sm-5">Tanggal Produksi</dt>
          <dd class="col-sm-7"><%= produksi.tanggalProduksi ? new Date(produksi.tanggalProduksi).toLocaleDateString('id-ID') : '-' %></dd>

          <dt class="col-sm-5">Target</dt>
          <dd class="col-sm-7"><%= produksi.targetProduksi?.jumlah ?? '-' %> <%= produksi.targetProduksi?.satuan || '' %></dd>

          <dt class="col-sm-5">Hasil</dt>
          <dd class="col-sm-7"><%= produksi.hasilProduksi?.jumlah ?? '-' %> <%= produksi.hasilProduksi?.satuan || '' %></dd>

          <dt class="col-sm-5">Status</dt>
          <dd class="col-sm-7"><span class="badge bg-<%= produksi.status === 'Selesai' ? 'success' : produksi.status === 'Dibatalkan' ? 'danger' : 'warning' %>"><%= produksi.status || '-' %></span></dd>

          <dt class="col-sm-5">Kualitas</dt>
          <dd class="col-sm-7"><%= produksi.kualitas || '-' %></dd>

          <dt class="col-sm-5">Catatan</dt>
          <dd class="col-sm-7"><%= produksi.catatan || '-' %></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Peralatan</h5>
        <% if (Array.isArray(produksi.peralatan) && produksi.peralatan.length) { %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead><tr><th>Nama</th><th>Status</th></tr></thead>
              <tbody>
                <% produksi.peralatan.forEach((a) => { %>
                  <tr><td><%= a.namaAlat || '-' %></td><td><%= a.status || '-' %></td></tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-secondary">Tidak ada data peralatan.</div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Proses Produksi</h5>
        <% if (Array.isArray(produksi.prosesProduksi) && produksi.prosesProduksi.length) { %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead><tr><th>Tahap</th><th>Mulai</th><th>Selesai</th><th>PIC</th><th>Catatan</th></tr></thead>
              <tbody>
                <% produksi.prosesProduksi.forEach((t) => { %>
                  <tr>
                    <td><%= t.tahap || '-' %></td>
                    <td><%= t.waktuMulai ? new Date(t.waktuMulai).toLocaleString('id-ID') : '-' %></td>
                    <td><%= t.waktuSelesai ? new Date(t.waktuSelesai).toLocaleString('id-ID') : '-' %></td>
                    <td><%= t.pic || '-' %></td>
                    <td><%= t.catatan || '-' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-secondary">Tidak ada data proses.</div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/page-end') %>
