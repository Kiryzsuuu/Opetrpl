<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../partials/sidebar') %>
      </nav>
      
      <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= title %></h1>
          <% if (user.role === 'Admin' || user.role === 'Super Admin') { %>
            <a href="/komoditas/new" class="btn btn-primary">
              <i class="bi bi-plus"></i> Tambah Komoditas
            </a>
          <% } %>
        </div>
        
        <%- include('../partials/flash') %>
        
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Kode</th>
                <th>Nama</th>
                <th>Kategori</th>
                <th>Satuan</th>
                <th>Harga/Satuan</th>
                <th>Stok</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (komoditas.length === 0) { %>
                <tr>
                  <td colspan="8" class="text-center">Belum ada data komoditas</td>
                </tr>
              <% } else { %>
                <% komoditas.forEach(k => { %>
                  <tr>
                    <td><%= k.kode %></td>
                    <td><%= k.nama %></td>
                    <td><span class="badge bg-secondary"><%= k.kategori %></span></td>
                    <td><%= k.satuan %></td>
                    <td>Rp <%= k.hargaPerSatuan.toLocaleString('id-ID') %></td>
                    <td><%= k.stok %></td>
                    <td>
                      <% if (k.status === 'Tersedia') { %>
                        <span class="badge bg-success"><%= k.status %></span>
                      <% } else if (k.status === 'Habis') { %>
                        <span class="badge bg-danger"><%= k.status %></span>
                      <% } else { %>
                        <span class="badge bg-warning"><%= k.status %></span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/komoditas/<%= k._id %>" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                      </a>
                      <% if (user.role === 'Admin' || user.role === 'Super Admin') { %>
                        <a href="/komoditas/<%= k._id %>/edit" class="btn btn-sm btn-warning">
                          <i class="bi bi-pencil"></i>
                        </a>
                        <form action="/komoditas/<%= k._id %>?_method=DELETE" method="POST" style="display:inline;" data-confirm="Yakin ingin menghapus?" data-confirm-btn-class="btn-danger" data-confirm-ok-text="Hapus">
                          <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
