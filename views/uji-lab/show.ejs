<%- include('../partials/page-start', { title }) %>

<div class="d-flex justify-content-between align-items-center mb-4 page-animate">
  <div>
    <h2 class="mb-1"><i class="bi bi-clipboard-data"></i> Detail Uji Lab</h2>
    <div class="text-secondary small">Kode: <strong><%= ujiLab.kodeUji %></strong></div>
  </div>
  <div class="d-flex gap-2">
    <a href="/uji-lab/<%= ujiLab._id %>/edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
    <a href="/uji-lab" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Kembali</a>
  </div>
</div>

<%- include('../partials/flash') %>

<div class="row g-3">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Informasi</h5>
        <dl class="row mb-0">
          <dt class="col-5">Formulasi</dt>
          <dd class="col-7"><%= ujiLab.formulasi?.kode ? (ujiLab.formulasi.kode + ' - ' + ujiLab.formulasi.nama) : (ujiLab.formulasi || '-') %></dd>

          <dt class="col-5">Jenis Uji</dt>
          <dd class="col-7"><%= ujiLab.jenisUji || '-' %></dd>

          <dt class="col-5">Tanggal Uji</dt>
          <dd class="col-7"><%= ujiLab.tanggalUji ? new Date(ujiLab.tanggalUji).toLocaleDateString('id-ID') : '-' %></dd>

          <dt class="col-5">Laboratorium</dt>
          <dd class="col-7"><%= ujiLab.laboratorium || '-' %></dd>

          <dt class="col-5">Hasil</dt>
          <dd class="col-7"><span class="badge <%= ujiLab.hasilUji === 'Lulus' ? 'bg-success' : (ujiLab.hasilUji === 'Tidak Lulus' ? 'bg-danger' : 'bg-secondary') %>"><%= ujiLab.hasilUji || 'Pending' %></span></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Parameter Uji</h5>
        <% if (Array.isArray(ujiLab.parameterUji) && ujiLab.parameterUji.length) { %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead><tr><th>Parameter</th><th>Nilai</th><th>Satuan</th><th>Status</th></tr></thead>
              <tbody>
                <% ujiLab.parameterUji.forEach((p) => { %>
                  <tr>
                    <td><%= p.parameter || '-' %></td>
                    <td><%= p.nilai || '-' %></td>
                    <td><%= p.satuan || '-' %></td>
                    <td><%= p.status || '-' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-secondary">Tidak ada parameter.</div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Catatan & Rekomendasi</h5>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="text-secondary small">Catatan</div>
            <div><%= ujiLab.catatan || '-' %></div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary small">Rekomendasi</div>
            <div><%= ujiLab.rekomendasi || '-' %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/page-end') %>
